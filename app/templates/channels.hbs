<div class="ui grid three column">
  {{#each model as |channel|}}
  <div class="column">
    <div class="ui segment">
      <div class="ui medium header centered">{{channel.id}}</div>
      <table class="ui celled table">
        <thead>
          <tr>
            <th>рейтинг</th>
            <th>время</th>
            <th>название</th>
          </tr>
        </thead>
        {{program-list programs=channel.programs}}
        {{#if isShowingBody}}
          <p>lol{{{body}}}</p>
        {{/if}}
      </table>
    </div>
  </div>
  {{/each}}
</div>

{{outlet}}
